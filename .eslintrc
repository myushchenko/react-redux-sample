{
  "parserOptions": {
    "annotations": true,
    "types": true,
    "memberVariables": true,
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "plugins": [
    "react",
    "eslint-plugin-react"
  ],

  "extends": [
    "standard", "standard-react"
  ],

  "parser": "babel-eslint",

  "rules": {
    "react/jsx-no-bind": [2, {
      "allowArrowFunctions": true,
      "allowBind": false,
      "ignoreRefs": true
    }],
    "react/no-did-update-set-state": 2,
    "react/no-unknown-property": 2,
    "react/prop-types": 2,
    "react/react-in-jsx-scope": 2
  }
}
